<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtVwTipoNeumaticos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="25dp"
        android:fontFamily="sans-serif"
        android:text="@string/txtVwTipoNeumaticos"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/velocidad_m_xima"
        android:textSize="24sp"
        tools:ignore="RtlHardcoded"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignLeft="@+id/radioGroup3"
        android:layout_alignStart="@+id/radioGroup3" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/name"
        tools:ignore="RtlHardcoded"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/btnEnviarNyV"
        android:layout_alignLeft="@+id/btnEnviarNyV"
        android:layout_alignStart="@+id/btnEnviarNyV"
        android:layout_alignRight="@+id/btnEnviarNyV"
        android:layout_alignEnd="@+id/btnEnviarNyV" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/editText"
        android:layout_alignLeft="@+id/txtVwTipoNeumaticos"
        android:layout_alignStart="@+id/txtVwTipoNeumaticos">

        <RadioButton
            android:id="@+id/rdbNormales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtVwTipoNeumaticos"
            android:layout_alignStart="@+id/txtVwTipoNeumaticos"
            android:layout_below="@+id/txtVwTipoNeumaticos"
            android:layout_marginTop="16dp"
            android:buttonTint="@android:color/background_light"
            android:checked="true"
            android:text="@string/rdbNormalesText"
            android:textColor="@android:color/white"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />

        <RadioButton
            android:id="@+id/rdbConCadena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_alignLeft="@+id/radioGroup3"
            android:layout_alignStart="@+id/radioGroup3"
            android:layout_marginBottom="25dp"
            android:buttonTint="@android:color/background_light"
            android:text="@string/rdbConCadenaText"
            android:textColor="@android:color/white"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />

    </RadioGroup>

    <Button
        android:id="@+id/btnEnviarNyV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="209dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:text="Enviar" />

</RelativeLayout>
